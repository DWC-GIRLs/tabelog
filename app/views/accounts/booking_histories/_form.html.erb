<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with model: booking_history, url: {controller: 'booking_histories', action: 'create'}, remote: true do |f| %>

      <div class="modal-header">
        <h5 class="modal-title"><%= restaurant.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <h5 class="date-pople">来店日時 <%= date %> <%= time %>　来店人数 <%= people_count %> 名</h5>
        <div class="label-info">
          <%= f.label :予約者情報 %>
        </div>
        <div class="info">
           名前: <%= current_account.nick_name %><br>
           メールアドレス: <%= current_account.email %><br>
        </div>
        <div class="label-notes">
          <%= f.label :レストランへのご要望 %>
        </div>
        <div class="notes">
          <%= f.text_area :notes, size: "50x5" %>
        </div>
        <%= f.hidden_field :restaurant_id, value: restaurant.id %>
        <%= f.hidden_field :date, value: date %>
        <%= f.hidden_field :time, value: time %>
        <%= f.hidden_field :people_count, value: people_count %>
      </div>

      <div class="modal-footer d-flex justify-content-center" >
        <div class="modal-actions">
          <%= f.submit "予約する", class: "btn btn-lg btn-orange" %>
        </div>
      </div>
    <% end %>
  </div>
</div>