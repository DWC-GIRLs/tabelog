<% @page_title = "#{params[:genre_name]}" %>

<div class="row">
  <div class="col-xs-6 col-md-3">
    <div class="card">
      <div class="card-header">
        <span class="font-weight-bold">エリア</span>から探す
      </div>
      <div class="card-body">
        <%= link_to "全国", class: "card-title", data: { toggle: "popover" }, title: "ポップオーバーのタイトル", data: { content: "ポップオーバーの内容"}, data: { trigger: "hover"} %>
      </div>
      <div class="card-footer text-muted">
        このエリアを地図で見る
      </div>
    </div>

    <div class="card mt-2">
      <div class="card-header">
        <span class="font-weight-bold">ジャンル</span>から探す
      </div>
      <div class="card-body">
        <h5 class="card-title">すベて</h5>
      </div>
      <div class="card-footer">
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-9">
    <%= render 'accounts/restaurants/index', restaurants: @restaurants %>
  </div>
</div>
