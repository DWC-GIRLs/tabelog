      l_area: "京都",
      m_areas: ["京都駅周辺", "河原町・木屋町・先斗町", "御所周辺", "壬生・二条城周辺", "祇園・清水寺・東山"],
      s_areas: ["京都市", "宇治・南山城", "亀山・丹羽・福知山", "天橋立・丹後半島"]
    %>
    <!-- 福岡(6) -->
    <%= render "subarea",
      l_area: "福岡",
      m_areas: ["博多駅周辺", "中洲周辺", "天神周辺", "赤坂・薬院・平尾周辺", "北九州市小倉北区", "久留米"],
      s_areas: ["福岡市", "太宰府・宗像・糟屋郡", "北九州市", "北九州市周辺", "筑豊", "久留米・筑後", "糸島"]
    %>
    <!----------- サブエリア終 --------------->
  </div>
</div>

<!-- ジャンル検索 -->
<div class="row mt-5">
  <div class="col-md-8 mb-3">
    <h4 class="font-weight-bold">料理ジャンルから探す</h4>
  </div>
  <!-- メインジャンル -->
  <div class="col-md-8 d-flex flex-wrap">
    <% @genres.each do |genre| %>
      <span class="main-genre">
        <%= link_to search_genre_path(genre_name: genre) do %>
          <%= image_tag "#{genre}.jpg", size: '135x135', class: "mr-2 genre_mainimg" %>
          <span class="ganre_name"><%= genre %></span>
        <% end %>
      </span>
    <% end %>
  </div>
  <!-- タグジャンル -->
  <div class="col-md-8 d-flex flex-wrap mt-4">
    <% @tags.each do |tag| %>
      <%= link_to search_genre_path(genre_name: tag) do %><!-- パラメータとしてrestを送る -->
        <button type="button" class="btn btn-outline-secondary mr-3"><%= tag %></button>
      <% end %>
    <% end %>
  </div>
</div>
