<!-- 検索窓 -->
<div class="row">
  <div class="col-md-8">
    <%= render '/accounts/shared/search_form' %>
  </div>
</div>

<div id="carousel" class="row mt-5 carousel slide carousel-fade" data-interval="false">
  <div class="carousel-inner">
    <!----------- メインエリア ------------->
    <div class="carousel-item active">
      <div class="col-md-8 mb-3">
        <h4 class="font-weight-bold">エリアから探す</h4>
      </div>
      <div class="col-md-8 d-flex flex-wrap">
        <% @areas.each.with_index(1) do |area, i| %>
        <!-- link_toにしたいなあ -->
          <a href="carousel" data-target="#carousel" data-slide-to=<%= i %>>
            <div class="card mb-3 mr-4" style="max-width: 260px">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <!-- "#{area}.jpg"みたいにすれば画像もeachで回せるかな -->
                  <%= image_tag "#{area}.jpg", size: "76x76", alt: area, class: "card-img rounded-0" %>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= area %></h5>
                  </div>
                </div>
              </div>
            </div>
          </a>
          <!-- link_toにしたいなあ -->
        <% end %>
        <div class="col-md-7 p-0">
          <%= render "mainarea", main: "北海道", areas: @hokkaido %>
          <%= render "mainarea", main: "中部", areas: @tyubu %>
          <%= render "mainarea", main: "中国・四国", areas: @tyugoku %>
        </div>
        <div class="col-md-5 p-0">
          <%= render "mainarea", main: "関東", areas: @kanto %>
          <%= render "mainarea", main: "関西", areas: @kansai %>
          <%= render "mainarea", main: "九州・沖縄", areas: @okinawa %>
        </div>
      </div>
    </div>
    <!----------- メインエリア終 ------------->

    <!-- サブエリア(メインエリア押すと発火) -->
    <!-- 東京(1) -->
    <%= render "subarea",
      l_area: "東京",
      m_areas: ["銀座", "新橋・汐留", "渋谷", "新宿", "池袋"],
      s_areas: ["銀座・新橋・有楽町", "東京・日本橋", "渋谷・恵比寿・代官山", "新宿・代々木・大久保", "池袋〜高田馬場・早稲田", "原宿・表参道・青山", "六本木・麻布・広尾", "赤坂・永田町・溜池", "四ツ谷・市ヶ谷・飯田橋", "秋葉原・神田・水道橋", "上野・浅草・日暮里", "両国・錦糸町・小岩", "築地・湾岸・お台場", "浜松町・田町・品川", "大井・蒲田", "目黒・白金・五反田", "東急沿線", "京王・小田急沿線", "中野〜西荻窪", "吉祥寺・三鷹・武蔵野境", "西武沿線", "板橋・東武沿線", "大塚・巣鴨・駒込・赤羽", "千住・綾瀬・葛飾", "小金井・国分寺・国立", "調布・府中・狛江", "町田・稲城・多摩", "西東京市周辺", "立川市・八王子市周辺", "福生・青梅周辺", "伊豆諸島・小笠原"]
    %>
    <!-- 神奈川(2) -->
    <%= render "subarea",
      l_area: "神奈川",
      m_areas: ["横浜駅周辺", "関内・伊勢佐木町", "藤沢・辻堂", "川崎駅周辺", "中原区（武蔵野小杉周辺）"],
      s_areas: ["横浜市", "鎌倉・湘南", "川崎市", "横須賀・逗子・葉山・三浦", "相模原・大和周辺", "海老名・厚木周辺", "小田原周辺", "箱根・湯河原"]
