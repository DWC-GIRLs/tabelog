<!-- アカウントログイン時 -->
<div class="row">
  <%= @page_title %>
  <ul class="nav-list">
    <li class="nav-list-item"><a href="#">メッセージ</a></li>
    <li class="nav-list-item"><a href="#">お知らせ</a></li>
    <li class="nav-list-item"><a href="#">予約確認</a></li>
    <li class="nav-list-item"><a href="#">行ったお店</a></li>
    <li class="nav-list-item"><a href="#">保存済み</a></li>

    <li class="nav-list-item dropdown">
      <%= link_to "マイページ", mypage_account_path(current_account) %>
      <span class="dropdown">
        <a class="dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= attachment_image_tag current_account, :profile_image, :fill, 27, 27, fallback: "potato.jpg", size: "27x27", class: "img-rounded" %>
        </a>
        <!-- ドロップメニューの設定 -->
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <span class="dropdown-item"><%= link_to "設定", edit_account_path(current_account) %></span>
          <span class="dropdown-item"><%= link_to "ログアウト", destroy_account_session_path, method: :delete %></span>
        </div>
      </span>
    </li>

  </ul>
</div>

<div class="row">
  <%= link_to root_path do %>
    <%= image_tag 'logo.jpg', alt: "tabelog logo", class: "brand-logo"%>
  <% end %>
</div>
