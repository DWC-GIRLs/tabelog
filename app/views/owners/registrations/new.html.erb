<div class="row d-flex justify-content-center">
  <h2>会員登録</h2>
</div>

<div class="row d-flex justify-content-center">
  <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-inline") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row mt-3">
        <div class="col-xs-12 col-sm-6">
          <%= f.label :"姓" %><br />
          <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6">
          <%= f.label :"名" %><br />
          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-xs-12 col-sm-6">
          <%= f.label :"セイ" %><br />
          <%= f.text_field :first_kana, autofocus: true, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6">
          <%= f.label :"メイ" %><br />
          <%= f.text_field :last_kana, autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12">
          <%= f.label :"電話番号" %><br />
          <%= f.text_field :phone_number, autofocus: true, placeholder: "ハイフンなし", class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12">
          <%= f.label :"email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>　※<%= @minimum_password_length %> 文字以上で入力してください</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12">
          <%= f.label :"パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <%= f.submit "オーナーとして会員登録", class:"btn btn-orange mt-3" %>
      </div>
    <% end %>

    <div class="row mt-1">
      <div class="col-12 d-flex justify-content-end">
        <%= render "owners/shared/links" %>
      </div>
    </div>

  </div>
</div>
