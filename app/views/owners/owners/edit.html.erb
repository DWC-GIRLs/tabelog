<h4>登録情報の編集</h4>

<div class="row d-flex justify-content-center">
  <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">

    <%= form_with model: current_owner, path: owner_path, local: true  do |f| %>
      <%= render "devise/shared/error_messages", resource: f.object %>

      <div class="row mt-3">
        <div class="col-xs-12 col-sm-6">
          <%= f.label :"姓" %><br />
          <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6">
          <%= f.label :"名" %><br />
          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-xs-12 col-sm-6">
          <%= f.label :"セイ" %><br />
          <%= f.text_field :first_kana, autofocus: true, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6">
          <%= f.label :"メイ" %><br />
          <%= f.text_field :last_kana, autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12">
          <%= f.label :"電話番号(ハイフンなし)" %><br />
          <%= f.text_field :phone_number, autofocus: true, placeholder: "ハイフンなし", class:"form-control" %>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <%= f.submit "登録情報を更新", class:"btn btn-orange mt-3" %>
      </div>
    <% end %>

  </div>
</div>
